{
  "name": "api_productos",
  "version": "0.0.1",
  "description": "CRUD de productos",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app",
    "dev": "tsx watch src/app.ts",
    "typeorm": "tsx ./node_modules/typeorm/cli.js",
    "migration:run": "npm run typeorm -- -d ./src/config/data-source.ts migration:run",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:generate": "npm run typeorm -- -d ./src/config/data-source.ts migration:generate",
    "migration:revert": "npm run typeorm -- -d ./src/config/data-source.ts migration:revert"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
